<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/topLeftImg"
        android:layout_width="60dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/hearts"
        android:layout_marginStart="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <ImageView
        android:id="@+id/btmRightImg"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="10dp"
        android:scaleY="-1"
        app:srcCompat="@drawable/hearts"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/centerImg"
        android:layout_width="95dp"
        android:layout_height="115dp"
        app:srcCompat="@drawable/hearts"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/topRightTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_alignParentTop="true"
        android:fontFamily="casual"
        android:text="A"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_alignStart="@+id/topLeftImg" />

    <TextView
        android:id="@+id/btmRightTv"
        android:layout_marginEnd="19dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleY="-1"
        android:fontFamily="casual"
        android:text="A"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:layout_alignTop="@+id/btmRightImg"
        android:layout_alignEnd="@+id/btmRightImg"
        android:layout_marginTop="76dp" />
</RelativeLayout>